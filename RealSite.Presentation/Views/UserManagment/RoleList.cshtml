@model IEnumerable<RealSite.Presentation.Identity.Roles.Queries.GetAllRoles.RoleListVm>
 
<h2>Role list</h2>
<table class="table">
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a asp-action="CreateRole">Add role</a>
<a asp-action="UpdateUserRole">User list</a>