@model RealSite.Presentation.Identity.User.Queries.GetAllUsers.UserListVm
@{
    ViewBag.Title = "User list";
}
 
<a asp-action="CreateUser">Add user</a>
 
<table class="table">
    <tr><th>Email</th><th>Organisation</th><th>Contact person</th><th>Phone number</th><th></th></tr>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.Organization</td>
            <td>@user.ContactPerson</td>
            <td>@user.Phone</td>
            <td>
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="EditUser" asp-route-id="@user.Id">Edit</a>                   
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>